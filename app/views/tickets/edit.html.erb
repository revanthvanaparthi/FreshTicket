<div class="card">
  <div class="card-header">
    <h1>Edit Ticket</h1>
  </div>
  <div class="card-body">
    <%= render "form", ticket: @ticket, action: 'Edit' %>
    <br>
    <div class="btn-toolbar">
      <%= link_to 'Show', @ticket, class:"btn btn-secondary btn-group mr-2" %>
      <%= button_to 'Delete', @ticket, method: :delete, class: "btn btn-danger btn-group mr-2" %>
      <%= link_to 'Back', :back, class:"btn btn-dark btn-group mr-2" %>
    </div>
  </div>
</div>
