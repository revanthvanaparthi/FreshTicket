<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Created By</th>
      <th scope="col">Assaigned To</th>
      <th scope="col">Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.title, ticket %></td>
        <td><%= ticket.description %></td>
        <td><%= ticket.show_org %></td>
        <td><%= ticket.show_agent %></td>
        <td><%= ticket.show_status %></td>
        <td><%= button_to 'Delete', ticket, method: :delete, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
